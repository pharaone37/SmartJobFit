# Production Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (AWS RDS)
DATABASE_URL=postgresql://smartjobfit:${DB_PASSWORD}@${DB_HOST}:5432/smartjobfit

# Security
SESSION_SECRET=${SESSION_SECRET}
JWT_SECRET=${JWT_SECRET}

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=${AWS_ACCOUNT_ID}

# API Keys (to be set in AWS Systems Manager Parameter Store)
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_GEMINI_API_KEY=${GOOGLE_GEMINI_API_KEY}

# Payment Processing
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# Email Service
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Job Board APIs
JOOBLE_API_KEY=${JOOBLE_API_KEY}
USAJOBS_API_KEY=${USAJOBS_API_KEY}
ADZUNA_API_KEY=${ADZUNA_API_KEY}

# AI Services
EDEN_AI_API_KEY=${EDEN_AI_API_KEY}
AFFINDA_API_KEY=${AFFINDA_API_KEY}
SOVREN_API_KEY=${SOVREN_API_KEY}

# Monitoring and Analytics
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_JOB_ALERTS=true 